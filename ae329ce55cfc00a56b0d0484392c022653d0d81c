n                );\n                continue;\n              }\n\n              // Handle blockquotes (can be multiline)\n              if (block.startsWith('> ')) {\n                const quoteContent = block.split('\\n').map(line =>\n                  line.startsWith('> ') ? line.substring(2) : line\n                ).join('\\n');\n                elements.push(\n                  <blockquote key={elements.length} className=\"border-l-4 border-primary pl-6 italic text-muted-foreground my-4\">\n                    {processInlineFormatting(quoteContent)}\n                  </blockquote>\n                );\n                continue;\n              }\n\n              // Handle list items\n              if (block.startsWith('- ') || block.startsWith('* ')) {\n                const listItems = block.split('\\n').filter(line => line.startsWith('- ') || line.startsWith('* '));\n                elements.push(\n                  <ul key={elements.length} className=\"list-disc list-inside mb-4 space-y-1\">\n                    {listItems.map((item, idx) => (\n                      <li key={idx}>{processInlineFormatting(item.substring(2))}</li>\n                    ))}\n                  </ul>\n                );\n                continue;\n              }\n\n              // Handle horizontal rules\n              if (block.trim() === '---') {\n                elements.push(\n                  <hr key={elements.length} className=\"border-border my-5\" />\n                );\n                continue;\n              }\n\n              // Handle links (with inline formatting)\n              if (block.includes('[') && block.includes('](')) {\n                const linkRegex = /\\[([^\\]]+)\\]\\(([^)]+)\\)/g;\n                const processedBlock = block.replace(linkRegex, (_, text, url) => {\n                  return `<a href=\"${url}\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"text-primary hover:underline\">${text}</a>`;\n                });\n                // Replace single newlines with <br>\n                const withBreaks = processedBlock.replace(/\\n/g, '<br>');\n                elements.push(\n                  <p key={elements.length} className=\"mb-4 leading-relaxed\" dangerouslySetInnerHTML={{ __html: withBreaks }} />\n                );\n                continue;\n              }\n\n              // Handle regular paragraphs - single newlines become <br>\n              const lines = block.split('\\n');\n              elements.push(\n                <p key={elements.length} className=\"mb-4 leading-relaxed\">\n                  {lines.map((line, idx) => (\n                    <React.Fragment key={idx}>\n                      {processInlineFormatting(line)}\n                      {idx < lines.length - 1 && <br />}\n                    </React.Fragment>\n                  ))}\n                </p>\n              );\n            }\n\n            return elements;\n          })()}\n        </div>",

.push(\n    97→                  <div key={elements.length} className=\"bg-code-bg text-code-foreground p-6 rounded-lg my-6 overflow-x-auto\">\n    98→                    <pre className=\"text-sm\">\n    99→                      <code>{codeLines.join('\\n')}</code>\n   100→                    </pre>\n   101→                  </div>\n   102→                );\n   103→                i++; // Skip the closing ```\n   104→                continue;\n   105→              }\n   106→              \n   107→              // Handle inline code\n   108→              if (line.includes('`') && !line.startsWith('```')) {\n   109→                const parts = line.split('`');\n   110→                elements.push(\n   111→                  <p key={elements.length} className=\"mb-6 leading-relaxed\">\n   112→                    {parts.map((part, idx) => \n   113→                      idx % 2 === 1 ? \n   114→                        <code key={idx} className=\"bg-code-bg text-code-foreground px-2 py-1 rounded text-sm\">{part}</code> : \n   115→                        part\n   116→                    )}\n   117→                  </p>\n   118→                );\n   119→                i++;\n   120→                continue;\n   121→              }\n   122→              \n   123→              // Handle headings\n   124→              if (line.startsWith('# ')) {\n   125→                elements.push(\n   126→                  <h1 key={elements.length} className=\"text-4xl font-bold mb-8 mt-12 first:mt-0\">\n   127→                    {line.substring(2)}\n   128→                  </h1>\n   129→                );\n   130→                i++;\n   131→                continue;\n   132→              }\n   133→              \n   134→              if (line.startsWith('## ')) {\n   135→                elements.push(\n   136→                  <h2 key={elements.length} className=\"text-2xl font-semibold mb-6 mt-10\">\n   137→                    {line.substring(3)}\n   138→                  </h2>\n   139→                );\n   140→                i++;\n   141→                continue;\n   142→              }\n   143→              \n   144→              if (line.startsWith('### ')) {\n   145→                elements.push(\n   146→                  <h3 key={elements.length} className=\"text-xl font-semibold mb-4 mt-8\">\n   147→                    {line.substring(4)}\n   148→                  </h3>\n   149→                );\n   150→                i++;\n   151→                continue;\n   152→              }\n   153→              \n   154→              // Handle blockquotes\n   155→              if (line.startsWith('> ')) {\n   156→                elements.push(\n   157→                  <blockquote key={elements.length} className=\"border-l-4 border-primary pl-6 italic text-muted-foreground my-6\">\n   158→                    {line.substring(2)}\n   159→                  </blockquote>\n   160→                );\n   161→                i++;\n   162→                continue;\n   163→              }\n   164→              \n   165→              // Handle list items\n   166→              if (line.startsWith('- ') || line.startsWith('* ')) {\n   167→                const listItems = [];\n   168→                while (i < lines.length && (lines[i].startsWith('- ') || lines[i].startsWith('* '))) {\n   169→                  listItems.push(lines[i].substring(2));\n   170→                  i++;\n   171→                }\n   172→                elements.push(\n   173→                  <ul key={elements.length} className=\"list-disc list-inside mb-6 space-y-2\">\n   174→                    {listItems.map((item, idx) => (\n   175→                      <li key={idx}>{item}</li>\n   176→                    ))}\n   177→                  </ul>\n   178→                );\n   179→                continue;\n   180→              }\n   181→              \n   182→              // Handle horizontal rules\n   183→              if (line.trim() === '---') {\n   184→                elements.push(\n   185→                  <hr key={elements.length} className=\"border-border my-8\" />\n   186→                );\n   187→                i++;\n   188→                continue;\n   189→              }\n   190→              \n   191→              // Handle bold text\n   192→              if (line.includes('**')) {\n   193→                const parts = line.split('**');\n   194→                elements.push(\n   195→                  <p key={elements.length} className=\"mb-6 leading-relaxed\">\n   196→                    {parts.map((part, idx) => \n   197→                      idx % 2 === 1 ? <strong key={idx}>{part}</strong> : part\n   198→                    )}\n   199→                  </p>\n   200→                );\n   201→                i++;\n   202→                continue;\n   203→              }\n   204→              \n   205→              // Handle links\n   206→              if (line.includes('[') && line.includes('](')) {\n   207→                const linkRegex = /\\[([^\\]]+)\\]\\(([^)]+)\\)/g;\n   208→                const processedLine = line.replace(linkRegex, (match, text, url) => {\n   209→                  return `<a href=\"${url}\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"text-primary hover:underline\">${text}</a>`;\n   210→                });\n   211→                elements.push(\n   212→                  <p key={elements.length} className=\"mb-6 leading-relaxed\" dangerouslySetInnerHTML={{ __html: processedLine }} />\n   213→                );\n   214→                i++;\n   215→                continue;\n   216→              }\n   217→              \n   218→              // Handle regular paragraphs\n   219→              elements.push(\n   220→                <p key={elements.length} className=\"mb-6 leading-relaxed\">\n   221→                  {line}\n   222→                </p>\n   223→              );\n   224→              i++;\n   225→            }\n   226→            \n   227→            return elements;\n   228→ 